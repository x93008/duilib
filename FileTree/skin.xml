<?xml version="1.0" encoding="utf-8"?>
<Window caption="0,0,0,30" roundcorner="5,5,5,5" sizebox="4,4,4,4" mininfo="300,400" maxinfo="800,600">
    <Font id="0" name="微软雅黑" size="12" bold="false"/>
    <Font id="1" name="微软雅黑" size="10"/>
    
    <VerticalLayout bkcolor="#FFE6E6FA">
        <!-- 标题栏 -->
        <HorizontalLayout height="30" bkcolor="#FF4682B4">
            <HorizontalLayout inset="5,0,0,0">
                <Text text="FileTree Demo" textcolor="#FFFFFFFF" font="0" align="left" valign="center"/>
            </HorizontalLayout>
            <HorizontalLayout width="90">
                <Button name="minbtn" width="30" height="20" text="_" textcolor="#FFFFFFFF" bkcolor="#FF4682B4" 
                        hotbkcolor="#FF6495ED" pushedbkcolor="#FF483D8B"/>
                <Button name="maxbtn" width="30" height="20" text="□" textcolor="#FFFFFFFF" bkcolor="#FF4682B4"
                        hotbkcolor="#FF6495ED" pushedbkcolor="#FF483D8B"/>
                <Button name="closebtn" width="30" height="20" text="×" textcolor="#FFFFFFFF" bkcolor="#FF4682B4"
                        hotbkcolor="#FFDC143C" pushedbkcolor="#FF8B0000"/>
            </HorizontalLayout>
        </HorizontalLayout>
        
        <!-- 主内容区 -->
        <HorizontalLayout inset="5,5,5,5">
            <!-- 左侧文件树 -->
            <VerticalLayout width="200">
                <Text text="文件树:" textcolor="#FF000000" font="0" height="20"/>
                <TreeView name="tree" bkcolor="#FFFFFFFF" bordercolor="#FFC0C0C0" bordersize="1" 
                          itemtextcolor="#FF000000" selitemtextcolor="#FFFFFFFF" selitembkcolor="#FF0078D4"
                          textpadding="2,2,2,2" childpadding="20" visiblefolderbtn="true" visiblecheckbtn="false"
                          itemminwidth="0" itemheight="20">
                </TreeView>
            </VerticalLayout>
            
            <!-- 右侧列表 -->
            <VerticalLayout inset="5,0,0,0">
                <Text text="文件列表:" textcolor="#FF000000" font="0" height="20"/>
                <List name="filelist" bkcolor="#FFFFFFFF" bordercolor="#FFC0C0C0" bordersize="1" 
                      itemtextcolor="#FF000000" selitemtextcolor="#FFFFFFFF" selitembkcolor="#FF0078D4"
                      vscrollbar="true" hscrollbar="false">
                    <ListHeader height="25" bkcolor="#FFF0F8FF">
                        <ListHeaderItem text="文件名" width="120"/>
                        <ListHeaderItem text="大小" width="80"/>
                        <ListHeaderItem text="修改时间" width="120"/>
                        <ListHeaderItem text="属性" width="60"/>
                    </ListHeader>
                </List>
            </VerticalLayout>
        </HorizontalLayout>
        
        <!-- 底部按钮 -->
        <HorizontalLayout height="35" inset="5,5,5,5">
            <Control />
            <Button name="close" width="60" height="25" text="关闭" textcolor="#FFFFFFFF" 
                    bkcolor="#FF4682B4" hotbkcolor="#FF6495ED" pushedbkcolor="#FF483D8B"/>
        </HorizontalLayout>
    </VerticalLayout>
</Window>
